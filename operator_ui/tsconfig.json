{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2015", "dom"],
    "moduleResolution": "node",
    "skipLibCheck": true,
    "isolatedModules": false,
    "noEmit": true,
    "allowJs": true,
    "jsx": "preserve",
    "sourceMap": true,
    "removeComments": false,
    "strict": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*"
  ],
  "references": [
    { "path": "../styleguide" }
  ],
  "files": [
    "@types/json-api-normalizer.d.ts",
    "@types/redux-object.d.ts",
    "@types/use-react-hooks.d.ts"
  ]
}
